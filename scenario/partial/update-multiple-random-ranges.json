{
	"type" : "sequential",
	"config" : {
		"item" : {
			"output" : {
				"path" : "partial-update-multiple-random-ranges"
			}
		},
		"storage" : {
			"driver" : {
				"concurrency" : 2
			}
		},
		"test" : {
			"step" : {
				"limit" : {
					"count" : 100
				}
			}
		}
	},
	"steps": [
		{
			// write new data
			"type" : "precondition",
			"config" : {
				"item" : {
					"output" : {
						"file" : "partial-update-multiple-random-ranges-0.csv"
					}
				}
			}
		}, {
			// update the written data
			"type": "load",
			"config" : {
				"item" : {
					"data" : {
						// update 10 random byte ranges per request
						"ranges" : {
							"random" : 10
						}
					},
					"input" : {
						"file" : "partial-update-multiple-random-ranges-0.csv"
					},
					"output" : {
						"file" : "partial-update-multiple-random-ranges-1.csv"
					}
				},
				"load" : {
					"type" : "update"
				}
			}
		}, {
			// verify the updated data
			"type": "load",
			"config" : {
				"item" : {
					"data" : {
						"verify" : true
					},
					"input" : {
						"file" : "partial-update-multiple-random-ranges-1.csv"
					}
				},
				"load" : {
					"type" : "read"
				}
			}
		}
	]
}
